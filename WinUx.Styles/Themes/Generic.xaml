    <!-- macOS-like Slider: Thumb style (circular) -->
    <Style x:Key="FirstModernSliderThumb" TargetType="Thumb">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Grid RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="thumbScale" ScaleX="1" ScaleY="1"/>
                        </Grid.RenderTransform>

                        <Ellipse x:Name="ellipse"
                                 Fill="White"
                                 Stroke="#D0D0D0"
                                 StrokeThickness="1"
                                 Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#22000000" BlurRadius="6" ShadowDepth="1" Opacity="0.7"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <!-- subtle inner highlight to resemble macOS thumb -->
                        <Ellipse x:Name="innerEllipse"
                                 Margin="1"
                                 Fill="#F8F8F8"
                                 Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Opacity="0.8"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ellipse" Property="Stroke" Value="#A0A0A0"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.08"
                                                         Duration="0:0:0.12"/>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.08"
                                                         Duration="0:0:0.12"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.12"/>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.12"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Use Thumb.IsDragging instead of IsPressed (Thumb has no IsPressed DP) -->
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="ellipse" Property="Fill" Value="#F0F0F0"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.96"
                                                         Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.96"
                                                         Duration="0:0:0.08"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.08"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ellipse" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

