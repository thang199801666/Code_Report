<UserControl x:Class="WinUx.Controls.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="24" MinWidth="60">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="26"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="PART_TextBox"
                 Grid.Column="0"
                 VerticalContentAlignment="Center"
                 Padding="8,3,8,1"
                 Style="{StaticResource ModernTextBox}" />

        <Grid Grid.Column="1" Margin="4,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button x:Name="PART_UpButton"
                    Grid.Row="0"
                    Margin="0,0,0,2"
                    Height="14"
                    Style="{StaticResource ImageButtonStyle}"
                    ToolTip="Increase">
                <Path Data="M 4 8 L 8 4 L 12 8 Z" Fill="#444" Stretch="Uniform"/>
            </Button>

            <Button x:Name="PART_DownButton"
                    Grid.Row="1"
                    Margin="0,2,0,0"
                    Height="14"
                    Style="{StaticResource ImageButtonStyle}"
                    ToolTip="Decrease">
                <Path Data="M 4 4 L 8 8 L 12 4 Z" Fill="#444" Stretch="Uniform"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>