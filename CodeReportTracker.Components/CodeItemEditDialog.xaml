<Window x:Class="CodeReportTracker.Components.CodeItemEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Code Item"
        SizeToContent="WidthAndHeight"
        MinWidth="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Height="548"
        Width="480"
        Background="{StaticResource WindowBackgroundBrush}"
        FontFamily="Segoe UI">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Background="{StaticResource ControlBackgroundBrush}" Padding="12" CornerRadius="6" Effect="{StaticResource ShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <!-- Description row changed to Auto so it can expand -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="32"/>
                        <!-- Latest Code: Old / New -->
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <!-- Issue Date: Old / New -->
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <!-- Expiration Date: Old / New -->
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Number:"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Link:"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding Link, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Product Category:"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding ProductCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Description:"/>
                    <TextBox x:Name="DescriptionTextBox"
                             Grid.Row="3"
                             Grid.Column="1"
                             Style="{StaticResource ModernTextBox}"
                             Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Disabled"
                             MinHeight="24"
                             VerticalAlignment="Top"
                             Loaded="DescriptionTextBox_Loaded"
                             TextChanged="DescriptionTextBox_TextChanged"
                             SizeChanged="DescriptionTextBox_SizeChanged"/>

                    <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Products Listed:"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding ProductsListed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Latest Code: Old -->
                    <Label Grid.Row="5" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Latest Code (Old):"/>
                    <TextBox Grid.Row="5" 
                             Grid.Column="1" 
                             Style="{StaticResource ModernTextBox}" 
                             Text="{Binding LatestCodeOld, Mode=OneWay}" 
                             IsReadOnly="True" />

                    <!-- Latest Code: New -->
                    <Label Grid.Row="6" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Latest Code (New):"/>
                    <TextBox Grid.Row="6" 
                             Grid.Column="1" 
                             Style="{StaticResource ModernTextBox}" 
                             Text="{Binding LatestCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Issue Date: Old -->
                    <Label Grid.Row="7" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Issue Date (Old):"/>
                    <TextBox Grid.Row="7" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding IssueDateOld, Mode=OneWay}" IsReadOnly="True" />

                    <!-- Issue Date: New -->
                    <Label Grid.Row="8" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Issue Date (New):"/>
                    <TextBox Grid.Row="8" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding IssueDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Expiration Date: Old -->
                    <Label Grid.Row="9" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Expiration Date (Old):"/>
                    <TextBox Grid.Row="9" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding ExpirationDateOld, Mode=OneWay}" IsReadOnly="True" />

                    <!-- Expiration Date: New -->
                    <Label Grid.Row="10" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Expiration Date (New):"/>
                    <TextBox Grid.Row="10" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding ExpirationDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="11" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Download %:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="11" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBox Style="{StaticResource ModernTextBox}" Text="{Binding DownloadProcess, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" />
                        <!-- keep TextBox for existing VM; you can replace with ProgressBar bound to a numeric value if available -->
                    </StackPanel>

                    <StackPanel Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                        <CheckBox Style="{StaticResource FirstModernCheckBox}" Content="Has Check" IsChecked="{Binding HasCheck, Mode=TwoWay}" Margin="0,0,12,0" IsEnabled="False"/>
                        <CheckBox Style="{StaticResource FirstModernCheckBox}" Content="Has Update" IsChecked="{Binding HasUpdate, Mode=TwoWay}" Margin="0,0,12,0" IsEnabled="False"/>
                        <CheckBox Style="{StaticResource FirstModernCheckBox}" Content="Code Exists" IsChecked="{Binding CodeExists, Mode=TwoWay}" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="100" Margin="6,0,0,0" IsDefault="True" Click="Ok_Click" Style="{StaticResource FirstModernButton}">OK</Button>
            <Button Width="100" Margin="6,0,0,0" IsCancel="True" Click="Cancel_Click" Style="{StaticResource SecondModernButton}">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>